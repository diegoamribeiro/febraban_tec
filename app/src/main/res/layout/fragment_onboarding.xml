<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OnboardFragment"
    android:background="@drawable/bg_default"
    >

    <ImageView
        android:id="@+id/iv_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@color/mask_black"
        />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/cap_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_mask" />

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_hello_continue"
        android:textSize="48sp"
        android:fontFamily="@font/ubuntu_light"
        android:textColor="@color/white"
        android:layout_marginHorizontal="100dp"
        android:text="@string/label_welcome"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_hello_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hello"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="100dp"
        android:textColor="@color/white"
        android:text="@string/label_continue" />

    <com.google.android.material.button.MaterialButton
        style="@style/CustomOutlinedButtonStyle"
        android:id="@+id/bt_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/begin_test"
        android:fontFamily="@font/ubuntu_light"
        android:textAllCaps="false"
        android:textSize="48sp"
        app:layout_constraintTop_toBottomOf="@id/tv_hello_continue"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>