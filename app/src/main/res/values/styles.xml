<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- outras cores e estilos ... -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- outras customizações do tema ... -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomOutlinedButtonStyle" parent="Widget.Material3.Button.OutlinedButton" tools:ignore="ResourceCycle">
        <item name="backgroundTint">@drawable/bg_button</item>
        <item name="android:textColor">@drawable/bt_text_color</item>
        <item name="strokeColor">@color/cian_blue</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">10dp</item>
    </style>

    <style name="CustomFilledButtonStyle" parent="Widget.Material3.Button.OutlinedButton" tools:ignore="ResourceCycle">
        <item name="backgroundTint">@color/soft_blue</item>
        <item name="strokeColor">@color/cian_blue</item>
        <item name="android:textColor">@color/component_text</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">10dp</item>
    </style>

    <style name="CustomTransparentButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">27sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="TextStyleUbuntuLightCenteredWhite" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginEnd">100dp</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar">
<!--        <item name="android:thickness">1dp</item>-->
        <item name="trackThickness">1dp</item>
        <item name="android:thickness">1dp</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonTint">@drawable/custom_radio</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="buttonTint">@color/cian_blue</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <style name="RadioButtonNewStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/cian_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:drawableBottom">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:drawableTint">@color/cian_blue</item>

    </style>

    <style name="CustomEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginEnd">100dp</item>
    </style>

</resources>